#!/bin/bash

set -x

[ x"`basename $PWD`" == x"mother" ] || exit 1

/bin/mkdir -pv /var/lib/mother/tasks /var/lib/mother/lib
/usr/bin/find tasks -name *.rake | /usr/bin/xargs -L1 -I{} /usr/bin/install -v -u root -g root -m 644 {} /var/lib/mother/{}
/usr/bin/find lib -name *.rb | /usr/bin/xargs -L1 -I{} /usr/bin/install -v -u root -g root -m 644 {} /var/lib/mother/{}
/usr/bin/install -v -u root -g root -m 644 Rakefile /var/lib/mother/Rakefile
/usr/bin/install -v -u root -g root -m 640 CONFIG.yaml /etc/mother.yaml
/usr/bin/install -v -u root -g root -m 750 bin/mother /usr/local/sbin/mother

set +x