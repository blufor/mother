<VirtualHost *:80>
  ServerName <%= value '/config/foreman/hostname' %>
  ServerAlias foreman
  DocumentRoot /usr/share/foreman/public
  PassengerAppRoot /usr/share/foreman
  <Directory /usr/share/foreman/public>
    Options FollowSymLinks
    DirectoryIndex index.html
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory>
</VirtualHost>
<VirtualHost *:443>
  ServerName <%= value '/config/foreman/hostname' %>
  ServerAlias foreman
  DocumentRoot /usr/share/foreman/public
  PassengerAppRoot /usr/share/foreman
  SSLEngine On
  SSLVerifyClient optional
  SSLOptions +StdEnvVars
  SSLVerifyDepth 1
  SSLCertificateFile      "/var/lib/puppet/ssl/certs/<%= value '/config/puppet/master/hostname' %>.pem"
  SSLCertificateKeyFile   "/var/lib/puppet/ssl/private_keys/<%= value '/config/puppet/master/hostname' %>.pem"
  # SSLCACertificatePath    "/var/lib/puppet/ssl/certs"
  SSLCACertificateFile    "/var/lib/puppet/ssl/certs/ca.pem"
  SSLCARevocationFile     "/var/lib/puppet/ssl/ca/ca_crl.pem"
  SSLCertificateChainFile "/var/lib/puppet/ssl/certs/ca.pem"
  <Directory /usr/share/foreman/public>
    Options FollowSymLinks
    DirectoryIndex index.html
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory>

</VirtualHost>
