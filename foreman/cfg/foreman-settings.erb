---
:puppet_server: <%= value '/config/puppet/master/hostname' %>
:unattended: true
:foreman_url: https://<%= value '/config/foreman/hostname' %>/
:unattended_url: http://<%= value '/config/foreman/hostname' %>/
:puppetconfdir: /etc/foreman/puppet.conf
:login: true
:use_gravatar: true
:require_ssl: true
:locations_enabled: true
:organizations_enabled: true
:ssl_priv_key: /etc/foreman/private_key.pem
:ssl_certificate: /var/lib/puppet/ssl/certs/<%= `hostname -f`.chomp %>.pem
:websockets_encrypt: true
:websockets_ssl_key: /etc/foreman/private_key.pem
:websockets_ssl_cert: /var/lib/puppet/ssl/certs/<%= `hostname -f`.chomp %>.pem
:ssl_client_dn_env: HTTP_X_CLIENT_DN
:ssl_client_verify_env: HTTP_X_CLIENT_VERIFY
:puppetdb_enabled: true
:puppetdb_address: https://<%= value '/config/puppet/master/hostname' %>:8142/v2/commands
:puppetdb_dashboard_address: http://<%= value '/config/puppet/master/hostname' %>:8141/dashboard
