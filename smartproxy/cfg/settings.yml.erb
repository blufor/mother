---
:daemon: false
:enabled: https
:log_file: STDOUT
:log_level: INFO
:https_port: 8443
:ssl_certificate: /var/lib/puppet/ssl/certs/<%= `hostname -f`.chomp %>.pem
:ssl_ca_file: /var/lib/puppet/ssl/certs/ca.pem
:ssl_private_key: /var/lib/puppet/ssl/private_keys/<%= `hostname -f`.chomp %>.pem
:trusted_hosts:
  - <%= value '/config/puppet/master/hostname' %>
  - <%= value '/config/foreman/hostname' %>
  - <%= `hostname -f`.chomp %>
  - <%= `hostname -s`.chomp %>
